@model Category
<div class="col-12">
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Category Create</h5>

        </div>
        <div class="card-body">
            <form method="post" enctype="multipart/form-data">

                <div class="mb-3">
                    <label class="form-label" asp-for="Name"></label>
                    <input asp-for="Name" class="form-control">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label" asp-for="IsMain"></label>
                    <input asp-for="IsMain">
                    <span asp-validation-for="IsMain" class="text-danger"></span>
                </div>

                <div class="mb-3 d-none" id="PhotoBox">
                    <label class="form-label" asp-for="Photo"></label>
                    <input accept="image/*" asp-for="Photo" class="form-control">
                    <span asp-validation-for="Photo" class="text-danger"></span>
                </div>

                <div class="form-group" id="MainBox">
                    <label for="exampleFormControlSelect1">Select main Category</label>
                    <select  class="form-control" name="mainCatId">
                        @foreach (Category cat in ViewBag.Categories)
                        {
                            <option value="@cat.Id">@cat.Name</option>
                        }
                    </select>
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
                <a asp-action="Index" class="btn btn-dark">Go Back</a>
            </form>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script>
       $(document).on('change', '#IsMain', function () {
           if($("#IsMain").prop("checked")){
                $("#MainBox").addClass("d-none")
                $("#PhotoBox").removeClass("d-none")
           }
           else{
                $("#PhotoBox").addClass("d-none")
                $("#MainBox").removeClass("d-none")
           }
       });
           if($("#IsMain").prop("checked")){
                $("#MainBox").addClass("d-none")
                $("#PhotoBox").removeClass("d-none")
           }
           else{
                $("#PhotoBox").addClass("d-none")
                $("#MainBox").removeClass("d-none")
           }
    </script>
}

